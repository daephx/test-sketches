{
    "files.exclude": {
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.jekyll-cache": true,
        "**/.svn": true,
        "**/CVS": true,
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.jekyll-cache": true,
    },
    "[html]": {
        "editor.defaultFormatter": "sissel.shopify-liquid",
        "editor.tabSize": 4
    },
    "[css]": {
        // "editor.defaultFormatter": "vscode.css-language-features",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4
    },
    // "files.associations": {
    //     "*.html": "liquid"
    // },
    "liquid.format": true,
    "liquid.rules": {
        "ignore": [
            {
                "type": "liquid",
                "begin": "comment",
                "end": "endcomment"
            },
            {
                "type": "html",
                "begin": "script",
                "end": "script"
            },
            {
                "type": "html",
                "begin": "style",
                "end": "style"
            }
        ],
        "html": {
            "correct": true,
            "force_attribute": false,
            "braces": false,
            "preserve": 1,
            "unformatted": false
        },
        "js": {
            "preserve": 1,
            "method_chain": 0,
            "quote_convert": "none",
            "format_array": "indent",
            "format_object": "indent",
            "braces": false,
            "no_semicolon": false,
            "brace_block": true
        },
        "scss": {
            "css_insert_lines": true,
            "preserve": 2,
            "braces": false,
            "brace_block": true
        },
        "css": {
            "css_insert_lines": true,
            "preserve": 2,
            "braces": false,
            "brace_block": true
        },
        "json": {
            "preserve": 0,
            "braces": false,
            "brace_block": true,
            "no_semicolon": true
        }
    }
}